datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Article {
  id          String    @default(cuid()) @id  @map(name: "id")
  title       String
  description String
  body        String
  likes       Int       @default(0)
  slug        String    @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt @default(now())
  tags        Tag[]     

  @@index([title], name: "articles_title")
  @@index([createdAt], name: "created_at")
  @@index([likes], name: "likes")

  @@map(name: "articles")
}

model Tag {
  id        String    @default(cuid()) @id
  name      String    @unique
  slug      String    @unique
  articles  Article[] 
}