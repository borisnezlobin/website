generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Article {
  id          String   @id @default(cuid()) @map(name: "id")
  title       String
  description String
  body        String
  image       String?
  likes       Int      @default(0)
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@index([title], name: "articles_title")
  @@index([createdAt], name: "created_at")
  @@index([likes], name: "likes")
  @@map(name: "articles")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  body        String
  links       String[]
  github      String?
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@index([title], name: "projects_title")
  @@index([createdAt], name: "project_created_at")
  @@map(name: "projects")
}

model Note {
  id          String   @id @default(cuid())
  title       String
  description String
  mdxURL      String
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@index([title], name: "notes_title")
  @@index([createdAt], name: "notes_created_at")
  @@map(name: "notes")
}